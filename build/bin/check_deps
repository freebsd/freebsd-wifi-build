#!/bin/sh

# This script checks that relevant packages have been installed.

PKG_LIST="uboot-mkimage-2010.12 lzma perl5 rsync mips-xtoolchain-gcc"

retval=0
for i in ${PKG_LIST}; do
	echo -n "Checking - ${i} .. "
	pkg-static info -e ${i}
	if [ $? -ne 0 ]; then
		echo "ERROR."
		echo "Please install the ${i} package (pkg install ${i})."
		retval=1
	else
		echo "OK."
	fi
done

exit ${retval}
